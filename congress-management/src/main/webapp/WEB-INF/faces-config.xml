<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>es</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>i18n.error</base-name>
			<var>error</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.msgs</base-name>
			<var>msgs</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.menu</base-name>
			<var>menu</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.domain</base-name>
			<var>domain</var>
		</resource-bundle>
	</application>

	<converter>
		<converter-id>congressConverter</converter-id>
		<converter-class>es.us.gescon.web.converters.CongressConverter</converter-class>
	</converter>
	<converter>
		<converter-id>expositionConverter</converter-id>
		<converter-class>es.us.gescon.web.converters.ExpositionConverter</converter-class>
	</converter>
</faces-config>